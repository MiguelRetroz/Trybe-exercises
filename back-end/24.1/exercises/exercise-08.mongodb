// 8. Descubra quais s√£o os 5 clientes que gastaram o maior valor.
use('erp');

db.vendas.aggregate(
  [
    {
      $match: {
        status: {
          $in: ["ENTREGUE", "EM SEPARACAO"],
        },
      },
    },
    {
      $group: {
        _id: "$clienteId",
        gastoTotal: {
          $sum: "$valorTotal",
        },
      },
    },
    {
      $sort: {
        gastoTotal: -1,
      },
    },
    {
      $limit: 5,
    },
  ],
);
